{
  "name": "frontend-portal",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/frontend-portal/src",
  "tags": ["type:app", "scope:frontend"],
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/frontend-portal",
        "index": "apps/frontend-portal/src/index.html",
        "browser": "apps/frontend-portal/src/main.ts",
        "polyfills": ["zone.js", "apps/frontend-portal/src/polyfills.ts"],
        "tsConfig": "apps/frontend-portal/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/frontend-portal/public"
          }
        ],
        "styles": ["apps/frontend-portal/src/styles.scss"],
        "server": "apps/frontend-portal/src/main.server.ts",
        "ssr": {
          "entry": "apps/frontend-portal/src/server.ts"
        },
        "prerender": true,
        "scripts": [
          "node_modules/@popperjs/core/dist/umd/popper.min.js",
          "node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"
        ],
        "localize": true,
        "i18nMissingTranslation": "warning"
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        },
        "en": {
          "localize": ["en"]
        },
        "de": {
          "localize": ["de"]
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "continuous": true,
      "executor": "@angular-devkit/build-angular:dev-server",
      "options": {
        "hmr": false,
        "port": 4300
      },
      "configurations": {
        "production": {
          "buildTarget": "frontend-portal:build:production,en"
        },
        "development": {
          "buildTarget": "frontend-portal:build:development,en"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "frontend-portal:build",
        "outputPath": "apps/frontend-portal/src/i18n"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/frontend-portal/jest.config.ts",
        "tsConfig": "apps/frontend-portal/tsconfig.spec.json"
      }
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "frontend-portal:build",
        "port": 4300,
        "staticFilePath": "dist/apps/frontend-portal/browser",
        "spa": true
      }
    },
    "build-delegating-server": {
      "executor": "nx:run-commands",
      "outputs": [
        "{workspaceRoot}/dist/apps/frontend-portal-delegating-server"
      ],
      "options": {
        "command": "mkdir -p dist/apps/frontend-portal-delegating-server/server && npx tsc apps/frontend-portal/src/delegating-server.ts --outDir dist/apps/frontend-portal-delegating-server/server --target es2022 --module esnext --moduleResolution node --allowSyntheticDefaultImports --esModuleInterop --skipLibCheck --declaration false --sourceMap false --removeComments true",
        "cwd": "."
      }
    },
    "postbuild": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cp dist/apps/frontend-portal-delegating-server/server/delegating-server.js dist/apps/frontend-portal/server/server.mjs && cp -r dist/apps/frontend-portal/browser dist/apps/frontend-portal/server/browser"
      },
      "dependsOn": ["build", "build-delegating-server"]
    },
    "server-container-image": {
      "dependsOn": ["server"],
      "cache": false,
      "executor": "@nx-tools/nx-container:build",
      "options": {
        "engine": "docker",
        "file": "apps/frontend-portal/Dockerfile.server",
        "context": "dist/apps/frontend-portal/server"
      },
      "configurations": {
        "test": {
          "tags": ["ghcr.io/forepath/agenstra-portal-server:latest"]
        },
        "release": {
          "push": true,
          "tags": [
            "ghcr.io/forepath/agenstra-portal-server:latest",
            "ghcr.io/forepath/agenstra-portal-server:$VERSION"
          ]
        }
      },
      "defaultConfiguration": "test"
    },
    "start-containers": {
      "dependsOn": ["server-container-image"],
      "cache": false,
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/frontend-portal",
        "command": "docker compose up -d --force-recreate --remove-orphans"
      }
    }
  },
  "i18n": {
    "sourceLocale": "en",
    "locales": {
      "de": "apps/frontend-portal/src/i18n/messages.de.xlf"
    }
  }
}
