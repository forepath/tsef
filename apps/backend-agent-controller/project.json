{
  "name": "backend-agent-controller",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/backend-agent-controller/src",
  "projectType": "application",
  "tags": ["type:app", "scope:backend"],
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/backend-agent-controller",
        "main": "apps/backend-agent-controller/src/main.ts",
        "tsConfig": "apps/backend-agent-controller/tsconfig.app.json",
        "assets": [
          "apps/backend-agent-controller/src/assets",
          "apps/backend-agent-controller/src/migrations"
        ],
        "webpackConfig": "apps/backend-agent-controller/webpack.config.cjs",
        "generatePackageJson": true
      },
      "configurations": {
        "development": {
          "outputHashing": "none"
        },
        "production": {}
      }
    },
    "prune-lockfile": {
      "dependsOn": ["build"],
      "cache": true,
      "executor": "@nx/js:prune-lockfile",
      "outputs": [
        "{workspaceRoot}/dist/apps/backend-agent-controller/package.json",
        "{workspaceRoot}/dist/apps/backend-agent-controller/package-lock.json"
      ],
      "options": {
        "buildTarget": "build"
      }
    },
    "copy-workspace-modules": {
      "dependsOn": ["build"],
      "cache": true,
      "outputs": [
        "{workspaceRoot}/dist/apps/backend-agent-controller/workspace_modules"
      ],
      "executor": "@nx/js:copy-workspace-modules",
      "options": {
        "buildTarget": "build"
      }
    },
    "compile-migrations": {
      "dependsOn": ["build"],
      "executor": "nx:run-commands",
      "options": {
        "command": "mkdir -p dist/apps/backend-agent-controller/src/migrations && npx tsc $(find apps/backend-agent-controller/src/migrations -name '*.ts') --outDir dist/apps/backend-agent-controller/src/migrations --module commonjs --target es2021 --moduleResolution node --esModuleInterop --skipLibCheck --resolveJsonModule --declaration false --rootDir apps/backend-agent-controller/src/migrations"
      }
    },
    "prune": {
      "dependsOn": [
        "prune-lockfile",
        "copy-workspace-modules",
        "compile-migrations"
      ],
      "executor": "nx:noop"
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "backend-agent-controller:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "backend-agent-controller:build:development"
        },
        "production": {
          "buildTarget": "backend-agent-controller:build:production"
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/backend-agent-controller/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "api-container-image": {
      "dependsOn": ["prune"],
      "cache": false,
      "executor": "@nx-tools/nx-container:build",
      "options": {
        "engine": "docker",
        "file": "apps/backend-agent-controller/Dockerfile.api",
        "context": "dist/apps/backend-agent-controller",
        "defaultConfiguration": "test"
      },
      "configurations": {
        "test": {
          "tags": ["ghcr.io/forepath/agenstra-controller-api:latest"]
        },
        "release": {
          "push": true,
          "tags": [
            "ghcr.io/forepath/agenstra-controller-api:latest",
            "ghcr.io/forepath/agenstra-controller-api:$VERSION"
          ]
        }
      }
    },
    "start-containers": {
      "dependsOn": ["api-container-image"],
      "cache": false,
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/backend-agent-controller",
        "command": "docker compose up -d"
      }
    }
  }
}
