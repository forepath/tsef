{
  "name": "backend-agent-manager",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/backend-agent-manager/src",
  "projectType": "application",
  "tags": ["type:app", "scope:backend"],
  "implicitDependencies": [
    "platform-authentication",
    "framework-backend-feature-agent-manager"
  ],
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/backend-agent-manager",
        "main": "apps/backend-agent-manager/src/main.ts",
        "tsConfig": "apps/backend-agent-manager/tsconfig.app.json",
        "assets": [
          "apps/backend-agent-manager/src/assets",
          "apps/backend-agent-manager/src/migrations"
        ],
        "webpackConfig": "apps/backend-agent-manager/webpack.config.cjs",
        "generatePackageJson": true
      },
      "configurations": {
        "development": {
          "outputHashing": "none"
        },
        "production": {}
      }
    },
    "prune-lockfile": {
      "dependsOn": ["build"],
      "cache": true,
      "executor": "@nx/js:prune-lockfile",
      "outputs": [
        "{workspaceRoot}/dist/apps/backend-agent-manager/package.json",
        "{workspaceRoot}/dist/apps/backend-agent-manager/package-lock.json"
      ],
      "options": {
        "buildTarget": "build"
      }
    },
    "copy-workspace-modules": {
      "dependsOn": ["build"],
      "cache": true,
      "outputs": [
        "{workspaceRoot}/dist/apps/backend-agent-manager/workspace_modules"
      ],
      "executor": "@nx/js:copy-workspace-modules",
      "options": {
        "buildTarget": "build"
      }
    },
    "compile-migrations": {
      "dependsOn": ["build"],
      "executor": "nx:run-commands",
      "options": {
        "command": "mkdir -p dist/apps/backend-agent-manager/src/migrations && npx tsc $(find apps/backend-agent-manager/src/migrations -name '*.ts') --outDir dist/apps/backend-agent-manager/src/migrations --module commonjs --target es2021 --moduleResolution node --esModuleInterop --skipLibCheck --resolveJsonModule --declaration false --rootDir apps/backend-agent-manager/src/migrations"
      }
    },
    "prune": {
      "dependsOn": [
        "prune-lockfile",
        "copy-workspace-modules",
        "compile-migrations"
      ],
      "executor": "nx:noop"
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "backend-agent-manager:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "backend-agent-manager:build:development"
        },
        "production": {
          "buildTarget": "backend-agent-manager:build:production"
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/backend-agent-manager/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "api-container-image": {
      "dependsOn": ["prune"],
      "cache": false,
      "executor": "@nx-tools/nx-container:build",
      "options": {
        "engine": "docker",
        "file": "apps/backend-agent-manager/Dockerfile.api",
        "context": "dist/apps/backend-agent-manager"
      },
      "configurations": {
        "test": {
          "tags": ["ghcr.io/forepath/agenstra-manager-api:latest"]
        },
        "release": {
          "push": true,
          "tags": [
            "ghcr.io/forepath/agenstra-manager-api:latest",
            "ghcr.io/forepath/agenstra-manager-api:$VERSION"
          ]
        }
      },
      "defaultConfiguration": "test"
    },
    "worker-container-image": {
      "dependsOn": ["prune"],
      "cache": false,
      "executor": "@nx-tools/nx-container:build",
      "options": {
        "engine": "docker",
        "file": "apps/backend-agent-manager/Dockerfile.worker",
        "context": "dist/apps/backend-agent-manager"
      },
      "configurations": {
        "test": {
          "tags": ["ghcr.io/forepath/agenstra-manager-worker:latest"]
        },
        "release": {
          "push": true,
          "tags": [
            "ghcr.io/forepath/agenstra-manager-worker:latest",
            "ghcr.io/forepath/agenstra-manager-worker:$VERSION"
          ]
        }
      },
      "defaultConfiguration": "test"
    },
    "vnc-container-image": {
      "dependsOn": ["prune"],
      "cache": false,
      "executor": "@nx-tools/nx-container:build",
      "options": {
        "engine": "docker",
        "file": "apps/backend-agent-manager/Dockerfile.vnc",
        "context": "dist/apps/backend-agent-manager"
      },
      "configurations": {
        "test": {
          "tags": ["ghcr.io/forepath/agenstra-manager-vnc:latest"]
        },
        "release": {
          "push": true,
          "tags": [
            "ghcr.io/forepath/agenstra-manager-vnc:latest",
            "ghcr.io/forepath/agenstra-manager-vnc:$VERSION"
          ]
        }
      },
      "defaultConfiguration": "test"
    },
    "start-containers": {
      "dependsOn": [
        "api-container-image",
        "worker-container-image",
        "vnc-container-image"
      ],
      "cache": false,
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/backend-agent-manager",
        "command": "docker compose up -d --force-recreate --remove-orphans"
      }
    }
  }
}
