{
  "version": 1,
  "hooks": {
    "beforeShellExecution": [
      {
        "command": "./hooks/audit.sh",
        "description": "Audit shell command execution"
      }
    ],
    "beforeMCPExecution": [
      {
        "command": "./hooks/audit.sh",
        "description": "Audit MCP tool execution"
      }
    ],
    "afterFileEdit": [
      {
        "command": "./hooks/audit.sh",
        "description": "Audit file modifications"
      }
    ],
    "beforeSubmitPrompt": [
      {
        "command": "./hooks/audit.sh",
        "description": "Audit prompt submissions"
      }
    ],
    "stop": [
      {
        "command": "./hooks/audit.sh",
        "description": "Audit session termination"
      }
    ]
  }
}
