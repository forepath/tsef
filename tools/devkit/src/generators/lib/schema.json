{
  "$schema": "https://json-schema.org/schema",
  "$id": "Lib",
  "title": "Domain Library Generator",
  "description": "Nx generator for creating a new domain related nx library",
  "type": "object",
  "properties": {
    "domain": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What domain would you like to use?"
    },
    "scope": {
      "type": "string",
      "description": "The scope of the library",
      "$default": {
        "$source": "argv",
        "index": 1
      },
      "enum": ["frontend", "backend", "shared"],
      "x-prompt": {
        "message": "What scope would you like to assign to the library?",
        "type": "list",
        "items": [
          { "value": "frontend", "label": "Frontend" },
          { "value": "backend", "label": "Backend" },
          { "value": "native", "label": "Device Native" },
          { "value": "keycloak", "label": "Keycloak" },
          { "value": "shared", "label": "Shared" }
        ]
      }
    },
    "type": {
      "type": "string",
      "description": "The type of the library",
      "$default": {
        "$source": "argv",
        "index": 2
      },
      "enum": ["data-access", "feature", "ui", "util"],
      "x-prompt": {
        "message": "What type of library would you like to create?",
        "type": "list",
        "items": [
          { "value": "data-access", "label": "Data Access" },
          { "value": "feature", "label": "Feature" },
          { "value": "ui", "label": "UI" },
          { "value": "util", "label": "Utility" }
        ]
      }
    },
    "name": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 3
      },
      "x-prompt": "What name would you like to use?"
    },
    "generator": {
      "type": "string",
      "description": "Which base Nx generator to use?",
      "$default": {
        "$source": "argv",
        "index": 4
      },
      "enum": ["js", "node", "angular"],
      "x-prompt": {
        "message": "Which generator would you like to use?",
        "type": "list",
        "items": [
          { "value": "js", "label": "Nx JS Library (@nx/js:library)" },
          { "value": "node", "label": "Nx Node Library (@nx/node:library)" },
          {
            "value": "angular",
            "label": "Nx Angular Library (@nx/angular:library)"
          }
        ]
      }
    }
  },
  "required": ["name", "scope", "type", "generator", "domain"]
}
