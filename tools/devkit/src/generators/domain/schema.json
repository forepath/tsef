{
  "$schema": "https://json-schema.org/schema",
  "$id": "Domain",
  "title": "Domain Generator",
  "description": "Nx generator for creating a new domain",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?"
    },
    "prefix": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 1
      },
      "default": "@domain",
      "x-prompt": "What prefix would you like to use?"
    }
  },
  "required": ["name"]
}
